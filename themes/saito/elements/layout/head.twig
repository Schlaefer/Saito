<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="chrome=1">

  <base href="{{ base_url }}/" />
  <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>
  {% if meta.description %}
  <meta name="description" content="{{ meta.description }}">
  {% endif %}{% if meta.robots %}
  <meta name="robots" content="{{ meta.robots }}">
  {% endif %}
  <meta property="og:type" content="article" />
  <meta property="og:title" content="{{ current_page.title }} | {{ site_title }}" />
  <meta property="og:description" content="{{ meta.description }}" />
  <meta property="og:url" content="{{ current_page.url }}" />
  <meta property="og:site_name" content="{{ site_title }}" />

  <!-- styles -->
  <link href='http://fonts.googleapis.com/css?family=Cabin:400,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Arvo:700italic' rel='stylesheet' type='text/css'>

  <link rel="stylesheet" href="{{ theme_url }}/assets/styles/bootstrap/css/bootstrap.min.css" type="text/css" />
  <link rel="stylesheet" href="{{ theme_url }}/assets/styles/font-awesome.css" type="text/css" />
  <link rel="stylesheet" href="{{ theme_url }}/assets/styles/theme.css" type="text/css" />
  <link rel="stylesheet/less" href="{{ theme_url }}/assets/styles/default.less" type="text/css" />

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <script src="{{ theme_url }}/assets/scripts/lib/less.js" type="text/javascript"></script>

</head>
